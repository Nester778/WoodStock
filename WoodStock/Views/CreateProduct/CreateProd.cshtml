@{
}
@using WoodStock.ViewModels
@model CreateProdViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Main.css">
    <link rel="stylesheet" href="~/css/Catalog-Light.css">
    <link rel="stylesheet" href="~/css/CreateProd.css">
    <!--Plugin CSS file with desired skin-->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css" />

    <!--jQuery-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!--Plugin JavaScript file-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/js/ion.rangeSlider.min.js"></script>
    <title>Document</title>
</head>

<body>
    <nav id="mainNavbar" class="navbar-color navbar navbar-light navbar-expand-md">
        <a href="./Main.html" class="navbar-brand px-3">Wood<img class="logo" src="./asets/logo.svg" alt="">Stock</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navLinks">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="@Url.ActionLink("Index", "Home")" class="nav-link">Home</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="@Url.ActionLink("Catalog", "Catalog")" class="nav-link">Catalog</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.ActionLink("CreateProd", "CreateProduct")" class="nav-link">CreateProd</a>
                    </li>
                }
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="item collapse navbar-collapse" id="navLinks">
                <a class="btn color mx-3" href="@Url.ActionLink("Profile", "Profile")">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-person-bounding-box" viewBox="0 0 16 16">
                        <path d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z" />
                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    </svg>
                </a>
            </div>
        }
        else
        {
            <div id="navLinks" class="btn-group collapse navbar-collapse item ">
                <a style="max-width: 150px;" href="#registerForm" class="btn btn-outline color">Sign up</a>
                <a style="max-width: 150px;" href="@Url.ActionLink("LogIn", "LogIn")" class="btn btn-outline color">Log in</a>

            </div>
        }
    </nav>

    <div class="container">
        <form asp-action="CreateProd" asp-controller="CreateProduct" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group has-success">
                        <label class="form-label mt-4" for="title">Title</label>
                        <input asp-for="Title" type="text" value="" class="form-control" id="title">
                        <div class="valid-feedback">Success! You've done it.</div>
                    </div>

                    <label for="cost">Cost</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Cost" id="cost" type="number" class="form-control" min="0">
                    </div>

                    <div class="form-group">
                        <label for="material">Material</label>
                        <select asp-for="Material" class="custom-select" id="material" aria-label="Example select with button addon">
                            <option>Wood</option>
                            <option>Plasric</option>
                            <option>Metal</option>
                            <option>Another</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="material">Coating</label>
                        <select asp-for="Coating" class="custom-select" id="material" aria-label="Example select with button addon">
                            <option>Paint</option>
                            <option>Varnish</option>
                            <option>Wood stain</option>
                            <option>Anither</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">height</span>
                            </div>
                            <input asp-for="Size_Y" id="height" type="number" class="form-control" min="0">

                            <div class="input-group-prepend">
                                <span class="input-group-text">width</span>
                            </div>
                            <input asp-for="Size_X" type="number" class="form-control" min="0">


                            <div class="input-group-prepend">
                                <span class="input-group-text">depth</span>
                            </div>
                            <input asp-for="Size_Z" type="number" class="form-control" min="0">

                        </div>
                        <div class="my-2 text-danger small">dimensions in mm</div>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group has-success">
                        <label class="form-label mt-4" for="Description">Description</label>
                        <input asp-for="Description" type="text" class="form-control" id="Description">
                        <div class="valid-feedback">Success! You've done it.</div>
                        <label id="Photo" class="form-label mt-4" for="Description">Photo</label>
                        <input asp-for="Avatar" type="file" class="form-control" id="Photo">
                        <div class="valid-feedback">Success! You've done it.</div>
                    </div>
                    <div class="form-group has-success">
                        
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-outline-success" value="Create">
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
            crossorigin="anonymous"></script>

</body>
</html>